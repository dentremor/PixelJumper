<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import java.net.URL?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<AnchorPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="de.se2projekt.gui.OptionsController"
        styleClass="menu-screen">
    <stylesheets>
        <URL value="@../styles/styles.css"/>
    </stylesheets>
    <VBox styleClass="main-screen" prefHeight="900" prefWidth="1600" alignment="CENTER">
        <Slider fx:id="volumeSlider" minorTickCount="0" majorTickUnit="100" showTickLabels="true" maxWidth="300">

        </Slider>
        <Slider fx:id="musicSlider" minorTickCount="0" majorTickUnit="100" showTickLabels="true" maxWidth="300">

        </Slider>
    </VBox>

    <VBox alignment="TOP_LEFT" styleClass="button-list">
        <Button styleClass="menu-button" fx:id="returnButton" onMouseClicked="#handleReturnButtonClick">
            <graphic>
                <ImageView fitWidth="50.0" fitHeight="50.0">
                    <image>
                        <Image url="@../images/returnButton.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </VBox>
</AnchorPane>
